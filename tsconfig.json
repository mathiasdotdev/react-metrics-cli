{
  "compilerOptions": {
    // ‚öôÔ∏è Compatibilit√© Bun/ESM
    "module": "Preserve",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": false,
    "noEmit": true,

    // üéØ Ciblage (ESM moderne avec Bun)
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node", "bun-types"],
    "jsx": "react-jsx",
    "resolveJsonModule": true,

    // üì¶ Structure du projet
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      // principaux alias
      "$/*": ["./*"],
      "$lib/*": ["./src/lib/*"],
      "$analysis/*": ["./src/lib/analysis/*"],
      "$config/*": ["./src/lib/config/*"],
      "$reporter/*": ["./src/lib/reporter/*"],
      "$types/*": ["./src/lib/types/*"],
      "$ui/*": ["./src/lib/ui/*"],
      "$react-demo/*": ["./src/react-demo/*"],
      "$tests/*": ["./src/__tests__/*"],

      // sous-alias pour l'analyse
      "@annotation/*": ["./src/lib/analysis/annotation/*"],
      "@core/*": ["./src/lib/analysis/core/*"],
      "@detection/*": ["./src/lib/analysis/detection/*"],
      "@utils/*": ["./src/lib/analysis/utils/*"],
      "@verification/*": ["./src/lib/analysis/verification/*"]
    },

    // üîí S√©curit√© et Qualit√©
    "strict": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,

    // üõ†Ô∏è Confort de d√©veloppement
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
