{
  "name": "react-metrics-cli",
  "version": "1.15.0",
  "description": "CLI pour analyser le code mort dans les projets React",
  "main": "dist/index.js",
  "bin": {
    "react-metrics": "dist/index.js"
  },
  "scripts": {
    "build": "npx tsc",
    "build:prod": "npx tsc --project tsconfig.prod.json",
    "build:analyze": "npm run build:prod && node scripts/analyze-bundle.js",
    "dev": "npx ts-node src/index.ts",
    "start": "node dist/index.js",
    "clean": "node -e \"require('fs').rmSync('./dist', {recursive: true, force: true})\"",
    "prettify": "prettier --write . --ignore-path .gitignore",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run clean && npm run build:prod && npm run test"
  },
  "keywords": [
    "react",
    "dead-code",
    "analysis",
    "cli",
    "typescript",
    "javascript"
  ],
  "author": "React Metrics Team",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "inquirer": "^12.9.4",
    "node-fetch": "^3.3.2",
    "ora": "^8.2.0",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "README.md",
    "LICENCE",
    ".env.example"
  ]
}
