{
  "name": "react-metrics-cli",
  "version": "0.19.0",
  "description": "CLI pour analyser le code mort dans les projets React",
  "type": "module",
  "bin": {
    "react-metrics": "dist/index.js"
  },
  "scripts": {
    "bundle": "bun build -project ./tsconfig.json && tsc-alias -p ./tsconfig.json && chmod +x dist/index.js",
    "bundle:prod": "tsgo --project ./tsconfig.prod.json && tsc-alias -p ./tsconfig.prod.json && chmod +x dist/index.js",
    "dev": "bun run src/index.ts",
    "test": "bun test --dots",
    "test:watch": "bun test --watch",
    "test:ci": "bun test --coverage-reporter=lcov",
    "clean": "rm -rf dist/*",
    "format": "bunx prettier --write \"**/*.{js,mjs,jsx,ts,tsx,json,md}\"",
    "format:check": "bunx prettier --check \"**/*.{js,mjs,jsx,ts,tsx,json,md}\"",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "prepublish": "bun clean && bun bundle:prod && bun test",
    "prepare": "husky"
  },
  "keywords": [
    "react",
    "dead-code",
    "analysis",
    "cli",
    "typescript",
    "javascript"
  ],
  "author": "Mathias LEROY",
  "license": "MIT",
  "dependencies": {
    "@typescript/native-preview": "^7.0.0-dev.20251010.1",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "inquirer": "^12.9.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@eslint/markdown": "^7.4.0",
    "@types/bun": "^1.2.23",
    "@types/inquirer": "^9.0.9",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "ts-alias": "^0.0.7",
    "typescript-eslint": "^8.46.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "dist/**/*",
    "package.json",
    "README.md",
    "LICENCE"
  ],
  "lint-staged": {
    "**/*.{js,mjs,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md}": "prettier --write"
  }
}
